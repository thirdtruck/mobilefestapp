<h1>Listing events</h1>

<% for day in ['Thursday', 'Friday', 'Saturday', 'Sunday'] %>
<h2><%=h day %></h2>

<% for event in Event.find(:all, :conditions => { :date => day }) %>
	<p><%=h event.time %>.  Film: <strong><%= event.name %></strong> (<%=h event.location %>) <%=h event.cost %></p>
<% end %>

<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th>Cost</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.date %></td>
    <td><%=h event.time %></td>
    <td><%=h event.location %></td>
    <td><%=h event.cost %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

